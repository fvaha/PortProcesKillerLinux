{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PP Killer",
  "version": "1.0.3",
  "identifier": "com.ppkiller.linux",
  "build": {
    "frontendDist": "../ui",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PP Killer",
        "width": 950,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "shadow": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-2"
        ],
        "files": {},
        "desktopTemplate": null
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3",
          "libappindicator-gtk3",
          "librsvg2"
        ],
        "files": {}
      },
      "appimage": {
        "files": {}
      }
    }
  }
}